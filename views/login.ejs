<form action="/createSession" method="POST" class="register_form shadow-lg">
  <img src="/image/key.png" width="75" height="75" />
  <h3 class="mt-3">LOGIN</h3>

  <div class="mb-3 w-100">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      aria-describedby="emailHelp"
      name="email"
    />
  </div>

  <div class="mb-3 mx-1 w-100">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password" name="password" />
  </div>

  <div class="my-1">
    <div
      class="g-recaptcha"
      data-sitekey="6Le0pc8oAAAAABIMem_A4_QXYT6AT_OaQ1OEqOh-
    "
    ></div>
  </div>

  <button type="submit" class="btn btn-primary">Login</button>
  <div class="my-2">OR</div>
  <div class="mt-1 bg-danger p-1 rounded border-danger">
    <img src="/image/google.png" width="25" height="25" />
    <a href="/auth/google" class="px-2 text-white text-decoration-none">
      Login With Google
    </a>
  </div>

  <div class="mt-1">
    Don't have account? <a href="/" class="px-2"> Register </a>
  </div>

  <div class="mt-1">
    Forgot your Password?
    <a href="/forgotpassword" class="px-2"> Click Here </a>
  </div>
</form>
