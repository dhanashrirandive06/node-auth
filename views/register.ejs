<form action="/create" method="POST" class="register_form shadow-lg">
  <img src="/image/key.png" width="75" height="75" />
  <h3 class="mt-3">REGISTER</h3>

  <div class="mb-3 w-100">
    <label for="email" class="form-label">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      aria-describedby="email"
      name="email"
    />
  </div>
  <div class="w-100 d-flex">
    <div class="mb-3 mx-1 w-100">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
      />
    </div>
    <div class="mb-3 mx-1 w-100">
      <label for="confirmPassword" class="form-label">Confirm Password</label>
      <input
        type="password"
        class="form-control"
        id="confirmPassword"
        name="confirmPassword"
      />
    </div>
  </div>

  <div class="my-1">
    <div
      class="g-recaptcha"
      data-sitekey="6Le0pc8oAAAAABIMem_A4_QXYT6AT_OaQ1OEqOh-
  "
    ></div>
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
  <div class="my-2">OR</div>
  <div class="mt-1 bg-danger p-1 rounded border-danger">
    <img src="/image/google.png" width="25" height="25" />
    <a href="/auth/google" class="px-2 text-white text-decoration-none">
      Login With Google
    </a>
  </div>

  <div class="mt-1">
    Already have account? <a href="/login" class="px-2"> Login </a>
  </div>
</form>
